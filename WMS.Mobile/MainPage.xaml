<!-- MainPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WMS.Mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Image Source="dotnet_bot.png" SemanticProperties.Description="Cute dot net bot waving hi to you!" HeightRequest="200" HorizontalOptions="Center" />
            <Label Text="Welcome to WMS App" SemanticProperties.HeadingLevel="Level1" FontSize="32" HorizontalOptions="Center" />
            <Label Text="Manage your inventory efficiently" SemanticProperties.HeadingLevel="Level2" FontSize="18" HorizontalOptions="Center" />

            <!-- Add a button to navigate to InventoryPage -->
            <Button Text="Go to Inventory" Clicked="OnGoToInventoryClicked" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>